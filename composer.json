{
  "name": "contributte/event-dispatcher",
  "description": "Best event dispatcher / event manager / event emitter for Nette Framework",
  "keywords": ["nette", "symfony", "event", "dispatcher", "emitter"],
  "type": "library",
  "license": ["MIT"],
  "homepage": "https://github.com/contributte/event-dispatcher",
  "authors": [
    {
      "name": "Milan Felix Sulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">= 5.6",
    "symfony/event-dispatcher": "^3.2.0"
  },
  "require-dev": {
    "ninjify/qa": "^0.3.3",
    "ninjify/nunjuck": "^0.1.4",
    "nette/di": "^2.4.4"
  },
  "suggest": {
    "nette/di": "to use EventDispatcherExtension[CompilerExtension]"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\EventDispatcher\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Fixtures\\": "tests/fixtures"
    }
  },
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tester": [
      "tester -s -p php --colors 1 -c tests/php-unix.ini tests/cases"
    ],
    "tester-coverage": [
      "tester -s -p php --colors 1 -c tests/php-unix.ini -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ]
  }
}
